{
  "name": "student-analyst-backend",
  "runtime": "nodejs",
  "build": {
    "command": "echo 'Using simple server - no build needed'",
    "output": "."
  },
  "start": {
    "command": "npm run start-simple"
  },
  "environment": {
    "NODE_ENV": "production"
  },
  "healthcheck": {
    "path": "/api/health",
    "timeout": 30,
    "interval": 60
  },
  "resources": {
    "memory": "512MB",
    "cpu": "0.5"
  }
}
