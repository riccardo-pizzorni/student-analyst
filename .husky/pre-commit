#!/usr/bin/env sh
# Student Analyst Project - Robust Pre-Commit Hook
# This hook enforces code quality gates before allowing commits

set -e

echo "ğŸ” Starting pre-commit quality gates..."

# 1. TypeScript Type Checking
echo "ğŸ“ Checking TypeScript types..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed. Please fix the errors and try again."
  exit 1
fi
echo "âœ… TypeScript type checking passed"

# 2. ESLint Validation (only errors, warnings allowed)
echo "ğŸ” Running ESLint validation..."
npm run lint -- --max-warnings 10
if [ $? -ne 0 ]; then
  echo "âŒ ESLint validation failed. Run 'npm run lint:fix' to auto-fix issues, then try again."
  exit 1
fi
echo "âœ… ESLint validation passed (warnings under threshold)"

# 3. Prettier Code Formatting (auto-format staged files)
echo "ğŸ¨ Auto-formatting staged files with Prettier..."
npx prettier --write --ignore-unknown $(git diff --cached --name-only --diff-filter=ACM)
if [ $? -eq 0 ]; then
  echo "âœ… Staged files formatted successfully"
  # Re-add formatted files to staging
  git add $(git diff --cached --name-only --diff-filter=ACM)
else
  echo "âš ï¸ Some files could not be formatted, but continuing..."
fi

# 4. Test Execution for Critical Components
echo "ğŸ§ª Running tests for critical components..."
npm run test -- --passWithNoTests --silent
if [ $? -ne 0 ]; then
  echo "âŒ Test execution failed. Please fix the failing tests and try again."
  exit 1
fi
echo "âœ… All tests passed"

echo "ğŸ‰ All quality gates passed! Proceeding with commit..."
echo "ğŸ“Š Summary:"
echo "  âœ… TypeScript type checking"
echo "  âœ… ESLint validation (warnings allowed)"
echo "  âœ… Prettier auto-formatting applied"
echo "  âœ… Test execution"
echo "ğŸš€ Commit ready!"